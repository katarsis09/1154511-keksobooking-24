{
  "root": true,

  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },

  "env": {
    "es2017": true,
    "browser": true
  },

  "globals": {
    "_": "readonly",
    "L": "readonly",
    "noUiSlider": "readonly"
  },

  "extends": "htmlacademy/vanilla",

  "rules": {
    "arrow-body-style": "off",
    "id-length": ["error", { "min": 1 }],
    "no-console": "off",
    "no-debugger": "off",
    "prefer-template": "off"
  }
}